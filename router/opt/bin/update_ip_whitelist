#!/bin/sh

set -e

echo 'Update IP whitelist ...'

curl -L 'http://ftp.apnic.net/apnic/stats/apnic/delegated-apnic-latest' -o /opt/tmp/chinadns_chnroute.txt

if [ ! -f /opt/etc/chinadns_chnroute.old -a -f /opt/etc/chinadns_chnroute.txt ]; then
    mv /opt/etc/chinadns_chnroute.txt /opt/etc/chinadns_chnroute.old
fi

cat /opt/tmp/chinadns_chnroute.txt | awk -F\| '/CN\|ipv4/ { printf("%s/%d\n", $4, 32-log($5)/log(2)) }' > /opt/etc/chinadns_chnroute.txt

echo 'Update IP whitelist done.'

exit 0
